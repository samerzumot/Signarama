<style>
  .product-detail-container {
      max-width: 1200px;
      margin: 40px auto 60px; /* Reduced top margin since header is not fixed overlap in same way or handled by theme spacing */
      padding: 0 40px;
      display: grid;
      grid-template-columns: 1.2fr 1fr;
      gap: 60px;
  }

  .product-gallery {
      display: flex;
      flex-direction: column;
      gap: 20px;
  }

  .main-image-container {
      width: 100%;
      aspect-ratio: 4/3;
      border-radius: 12px;
      overflow: hidden;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  }

  .main-image-container img {
      width: 100%;
      height: 100%;
      object-fit: cover;
  }

  .thumbnail-strip {
      display: flex;
      gap: 15px;
      overflow-x: auto;
      padding-bottom: 10px;
  }

  .thumbnail {
      width: 100px;
      height: 75px;
      border-radius: 6px;
      object-fit: cover;
      cursor: pointer;
      opacity: 0.6;
      transition: all 0.3s;
      border: 2px solid transparent;
  }

  .thumbnail.active,
  .thumbnail:hover {
      opacity: 1;
      border-color: var(--primary-red);
  }

  .product-info h1 {
      font-size: 3rem;
      color: var(--primary-blue);
      margin-bottom: 20px;
      font-weight: 800;
  }

  .product-info p {
      font-size: 1.2rem;
      line-height: 1.8;
      color: #555;
      margin-bottom: 30px;
  }

  .product-features {
      list-style: none;
      margin-bottom: 40px;
  }

  .product-features li {
      display: flex;
      align-items: center;
      gap: 12px;
      margin-bottom: 15px;
      font-weight: 600;
      color: #333;
  }

  .product-features li::before {
      content: '✓';
      color: var(--primary-red);
      font-weight: 900;
  }

  .breadcrumb {
      margin-bottom: 20px;
      font-size: 0.9rem;
      color: #888;
  }

  .breadcrumb a {
      color: var(--primary-blue);
      text-decoration: none;
  }

  @media (max-width: 900px) {
      .product-detail-container {
          grid-template-columns: 1fr;
          margin-top: 40px;
          gap: 40px;
      }

      .product-info h1 {
          font-size: 2.2rem;
      }
  }
</style>

<div class="product-detail-container">
  <div class="product-gallery">
      <div class="breadcrumb">
          <a href="/">Home</a> / <a href="/#products">Products</a> / <span id="breadcrumb-current">Product</span>
      </div>
      <div class="main-image-container">
          <img id="main-product-image" src="" alt="Product">
      </div>
      <div class="thumbnail-strip" id="thumbnail-strip">
          <!-- Thumbnails go here -->
      </div>
  </div>

  <div class="product-info">
      <h1 id="product-title">Loading...</h1>
      <p id="product-description"></p>

      <ul class="product-features">
          <li>Professional Site Survey</li>
          <li>Custom Graphic Design</li>
          <li>Durable, High-Quality Materials</li>
          <li>Expert Installation Included</li>
      </ul>

      <button class="btn-quote btn-quote-trigger-header"
          style="width: 100%; max-width: 300px; height: 60px; font-size: 1.2rem;">
          REQUEST A QUOTE
      </button>
  </div>
</div>

<!-- Quote Modal (Included here again as it is needed for the button to work if not in layout) -->
<!-- Actually, main.js handles the modal logic and the modal HTML is likely in homepage-content. 
     We should ensure the modal exists. The modal logic in main.js selects #quote-modal.
     If the user navigates to this page, the homepage content section is NOT loaded.
     So we MUST include the modal HTML here or in theme.liquid.
     Best practice: Move modal to theme.liquid or `snippets/modal.liquid`. 
     For now, I will include it here to ensure functionality.
-->
<div id="quote-modal" class="modal-overlay">
  <div class="modal-content">
      <button class="modal-close" id="close-modal">&times;</button>
      <div class="hero-form-card static-form">
          <div id="success-message" class="success-content" style="display: none;">
              <div class="success-badge">✨ Same-day Response</div>
              <div class="success-icon-wrapper">
                  <svg class="success-checkmark" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 52 52">
                      <circle class="checkmark-circle" cx="26" cy="26" r="25" fill="none" />
                      <path class="checkmark-check" fill="none" d="M14.1 27.2l7.1 7.2 16.7-16.8" />
                  </svg>
              </div>
              <h3 class="success-title">Thank You!</h3>
              <p class="success-text">Your quote request has been received. Our team will reach out within
                  <strong>24 hours</strong>.
              </p>
              <button class="btn-quote" id="close-success-btn">Back to Site</button>
          </div>

          <form id="quote-form" action="https://formsubmit.co/info@signarama-vaughan.com" method="POST"
              enctype="multipart/form-data">
              <input type="hidden" name="_subject" value="New Quote Request - Signarama Vaughan">
              <input type="hidden" name="_captcha" value="false">
              <input type="hidden" name="_template" value="table">
              <input type="text" name="_honey" style="display:none">

              <div class="form-group">
                  <input type="text" placeholder="Name" required name="name">
              </div>
              <div class="form-group">
                  <input type="email" placeholder="Email Address *" required name="email">
              </div>
              <div class="form-group">
                  <input type="tel" placeholder="Phone Number *" required name="phone">
              </div>
              <div class="form-group">
                  <textarea id="quote-message" placeholder="Tell us about your project..." rows="3"
                      name="message"></textarea>
              </div>
              <div class="form-group file-upload">
                  <label for="file">Upload Design (Optional)</label>
                  <input type="file" id="file" name="attachment">
              </div>
              <button type="submit" class="btn-submit">Get Your Free Quote</button>
          </form>
      </div>
  </div>
</div>

<script type="module">
  import { products } from "{{ 'data.js' | asset_url }}";

  // Get Product Slug from URL
  const params = new URLSearchParams(window.location.search);
  const slug = params.get('item');

  const product = products.find(p => p.slug === slug);

  if (product) {
      // Fix image paths
      const getImgSrc = (src) => src.startsWith('http') ? src : (window.assetBaseUrl + src);

      // Populate UI
      document.title = `${product.title} - Signarama Vaughan`;
      document.getElementById('breadcrumb-current').innerText = product.title;
      document.getElementById('product-title').innerText = product.title;
      document.getElementById('product-description').innerText = product.longDescription;
      document.getElementById('main-product-image').src = getImgSrc(product.image);
      document.getElementById('quote-message').value = `I'm interested in ${product.title}. Please provide more information and a quote.`;

      // Thumbnails
      const thumbStrip = document.getElementById('thumbnail-strip');
      product.gallery.forEach((img, idx) => {
          const thumb = document.createElement('img');
          // data.js images are filenames or URLs.
          // If filename, prepend asset base url.
          thumb.src = getImgSrc(img);
          thumb.className = idx === 0 ? 'thumbnail active' : 'thumbnail';
          thumb.onclick = () => {
              document.getElementById('main-product-image').src = getImgSrc(img);
              document.querySelectorAll('.thumbnail').forEach(t => t.classList.remove('active'));
              thumb.classList.add('active');
          };
          thumbStrip.appendChild(thumb);
      });
  } else {
      // Fallback for Editor / Direct Access without param
      // Don't redirect, just show the first product as a demo
      const fallbackProduct = products[0];
      if (fallbackProduct) {
          const getImgSrc = (src) => src.startsWith('http') ? src : (window.assetBaseUrl + src);
          
          document.title = `${fallbackProduct.title} - Signarama Vaughan`;
          document.getElementById('breadcrumb-current').innerText = fallbackProduct.title;
          document.getElementById('product-title').innerText = fallbackProduct.title;
          document.getElementById('product-description').innerText = fallbackProduct.longDescription;
          document.getElementById('main-product-image').src = getImgSrc(fallbackProduct.image);
          
          // Thumbnails
          const thumbStrip = document.getElementById('thumbnail-strip');
          fallbackProduct.gallery.forEach((img, idx) => {
              const thumb = document.createElement('img');
              thumb.src = getImgSrc(img);
              thumb.className = idx === 0 ? 'thumbnail active' : 'thumbnail';
              thumbStrip.appendChild(thumb);
          });
      }
  }
</script>

