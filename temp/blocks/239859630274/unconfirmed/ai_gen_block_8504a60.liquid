{% doc %}
  @prompt
    scrollable gallery, fill images with ones from custom product details section and integrate seamlessly replacing previous section
{% enddoc %}

{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-scrollable-gallery-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    padding: {{ block.settings.section_padding }}px 0;
  }

  .ai-scrollable-gallery__container-{{ ai_gen_id }} {
    max-width: 100%;
    margin: 0 auto;
    padding: 0 {{ block.settings.container_padding }}px;
  }

  .ai-scrollable-gallery__header-{{ ai_gen_id }} {
    margin-bottom: {{ block.settings.header_spacing }}px;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-scrollable-gallery__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0 0 12px 0;
  }

  .ai-scrollable-gallery__description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.description_color }};
    margin: 0;
  }

  .ai-scrollable-gallery__scroll-container-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
  }

  .ai-scrollable-gallery__track-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.image_gap }}px;
    overflow-x: auto;
    scroll-behavior: smooth;
    scrollbar-width: none;
    -ms-overflow-style: none;
    padding-bottom: 20px;
  }

  .ai-scrollable-gallery__track-{{ ai_gen_id }}::-webkit-scrollbar {
    display: none;
  }

  .ai-scrollable-gallery__item-{{ ai_gen_id }} {
    flex-shrink: 0;
    width: {{ block.settings.image_width }}px;
    position: relative;
  }

  .ai-scrollable-gallery__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: {{ block.settings.image_height }}px;
    border-radius: {{ block.settings.border_radius }}px;
    overflow: hidden;
    background-color: #f4f4f4;
  }

  .ai-scrollable-gallery__image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-scrollable-gallery__image-wrapper-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-scrollable-gallery__controls-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 16px;
    margin-top: 24px;
  }

  .ai-scrollable-gallery__button-{{ ai_gen_id }} {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_icon_color }};
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background-color 0.3s ease;
  }

  .ai-scrollable-gallery__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
  }

  .ai-scrollable-gallery__button-{{ ai_gen_id }}:disabled {
    opacity: 0.3;
    cursor: not-allowed;
  }

  .ai-scrollable-gallery__button-{{ ai_gen_id }} svg {
    width: 24px;
    height: 24px;
  }

  .ai-scrollable-gallery__dots-{{ ai_gen_id }} {
    display: flex;
    gap: 8px;
  }

  .ai-scrollable-gallery__dot-{{ ai_gen_id }} {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background-color: {{ block.settings.dot_color }};
    border: none;
    cursor: pointer;
    padding: 0;
    transition: background-color 0.3s ease;
  }

  .ai-scrollable-gallery__dot-{{ ai_gen_id }}.active {
    background-color: {{ block.settings.dot_active_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-scrollable-gallery__item-{{ ai_gen_id }} {
      width: {{ block.settings.image_width_mobile }}px;
    }

    .ai-scrollable-gallery__image-wrapper-{{ ai_gen_id }} {
      height: {{ block.settings.image_height_mobile }}px;
    }
  }
{% endstyle %}

<scrollable-gallery-{{ ai_gen_id }} class="ai-scrollable-gallery-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-scrollable-gallery__container-{{ ai_gen_id }}">
    {% if block.settings.title != blank or block.settings.description != blank %}
      <div class="ai-scrollable-gallery__header-{{ ai_gen_id }}">
        {% if block.settings.title != blank %}
          <h2 class="ai-scrollable-gallery__title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
        {% endif %}
        {% if block.settings.description != blank %}
          <div class="ai-scrollable-gallery__description-{{ ai_gen_id }}">{{ block.settings.description }}</div>
        {% endif %}
      </div>
    {% endif %}

    <div class="ai-scrollable-gallery__scroll-container-{{ ai_gen_id }}">
      <div class="ai-scrollable-gallery__track-{{ ai_gen_id }}">
        {% liquid
          assign gallery_images = product.metafields.custom.product_details_images.value
          assign has_images = false
        %}

        {% if gallery_images != blank %}
          {% for image in gallery_images %}
            {% assign has_images = true %}
            <div class="ai-scrollable-gallery__item-{{ ai_gen_id }}" data-index="{{ forloop.index0 }}">
              <div class="ai-scrollable-gallery__image-wrapper-{{ ai_gen_id }}">
                <img
                  src="{{ image | image_url: width: 800 }}"
                  alt="{{ image.alt | escape }}"
                  loading="lazy"
                  width="{{ image.width }}"
                  height="{{ image.height }}"
                  class="ai-scrollable-gallery__image-{{ ai_gen_id }}"
                >
              </div>
            </div>
          {% endfor %}
        {% endif %}

        {% if product.images.size > 0 and has_images == false %}
          {% for image in product.images %}
            {% assign has_images = true %}
            <div class="ai-scrollable-gallery__item-{{ ai_gen_id }}" data-index="{{ forloop.index0 }}">
              <div class="ai-scrollable-gallery__image-wrapper-{{ ai_gen_id }}">
                <img
                  src="{{ image | image_url: width: 800 }}"
                  alt="{{ image.alt | escape }}"
                  loading="lazy"
                  width="{{ image.width }}"
                  height="{{ image.height }}"
                  class="ai-scrollable-gallery__image-{{ ai_gen_id }}"
                >
              </div>
            </div>
          {% endfor %}
        {% endif %}

        {% unless has_images %}
          {% for i in (1..5) %}
            <div class="ai-scrollable-gallery__item-{{ ai_gen_id }}">
              <div class="ai-scrollable-gallery__image-wrapper-{{ ai_gen_id }}">
                {{ 'product-1' | placeholder_svg_tag }}
              </div>
            </div>
          {% endfor %}
        {% endunless %}
      </div>
    </div>

    {% if block.settings.show_controls %}
      <div class="ai-scrollable-gallery__controls-{{ ai_gen_id }}">
        <button
          class="ai-scrollable-gallery__button-{{ ai_gen_id }} ai-scrollable-gallery__button-prev-{{ ai_gen_id }}"
          aria-label="Previous"
        >
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="15 18 9 12 15 6"></polyline>
          </svg>
        </button>

        <div class="ai-scrollable-gallery__dots-{{ ai_gen_id }}"></div>

        <button
          class="ai-scrollable-gallery__button-{{ ai_gen_id }} ai-scrollable-gallery__button-next-{{ ai_gen_id }}"
          aria-label="Next"
        >
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="9 18 15 12 9 6"></polyline>
          </svg>
        </button>
      </div>
    {% endif %}
  </div>
</scrollable-gallery-{{ ai_gen_id }}>

<script>
  (function() {
    class ScrollableGallery{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.track = this.querySelector('.ai-scrollable-gallery__track-{{ ai_gen_id }}');
        this.items = this.querySelectorAll('.ai-scrollable-gallery__item-{{ ai_gen_id }}');
        this.prevButton = this.querySelector('.ai-scrollable-gallery__button-prev-{{ ai_gen_id }}');
        this.nextButton = this.querySelector('.ai-scrollable-gallery__button-next-{{ ai_gen_id }}');
        this.dotsContainer = this.querySelector('.ai-scrollable-gallery__dots-{{ ai_gen_id }}');
        this.currentIndex = 0;
      }

      connectedCallback() {
        if (!this.track || this.items.length === 0) return;

        this.createDots();
        this.updateButtons();
        this.setupEventListeners();
      }

      createDots() {
        if (!this.dotsContainer) return;

        this.dotsContainer.innerHTML = '';
        this.items.forEach((item, index) => {
          const dot = document.createElement('button');
          dot.classList.add('ai-scrollable-gallery__dot-{{ ai_gen_id }}');
          if (index === 0) dot.classList.add('active');
          dot.setAttribute('aria-label', `Go to image ${index + 1}`);
          dot.addEventListener('click', () => this.scrollToIndex(index));
          this.dotsContainer.appendChild(dot);
        });
      }

      setupEventListeners() {
        if (this.prevButton) {
          this.prevButton.addEventListener('click', () => this.scrollPrev());
        }

        if (this.nextButton) {
          this.nextButton.addEventListener('click', () => this.scrollNext());
        }

        this.track.addEventListener('scroll', () => {
          this.updateActiveState();
        });
      }

      scrollPrev() {
        if (this.currentIndex > 0) {
          this.scrollToIndex(this.currentIndex - 1);
        }
      }

      scrollNext() {
        if (this.currentIndex < this.items.length - 1) {
          this.scrollToIndex(this.currentIndex + 1);
        }
      }

      scrollToIndex(index) {
        const item = this.items[index];
        if (!item) return;

        const scrollLeft = item.offsetLeft - this.track.offsetLeft;
        this.track.scrollTo({
          left: scrollLeft,
          behavior: 'smooth'
        });

        this.currentIndex = index;
        this.updateActiveState();
        this.updateButtons();
      }

      updateActiveState() {
        const scrollLeft = this.track.scrollLeft;
        const trackLeft = this.track.offsetLeft;

        let closestIndex = 0;
        let closestDistance = Infinity;

        this.items.forEach((item, index) => {
          const itemLeft = item.offsetLeft - trackLeft;
          const distance = Math.abs(scrollLeft - itemLeft);

          if (distance < closestDistance) {
            closestDistance = distance;
            closestIndex = index;
          }
        });

        this.currentIndex = closestIndex;

        const dots = this.dotsContainer?.querySelectorAll('.ai-scrollable-gallery__dot-{{ ai_gen_id }}');
        if (dots) {
          dots.forEach((dot, index) => {
            if (index === closestIndex) {
              dot.classList.add('active');
            } else {
              dot.classList.remove('active');
            }
          });
        }

        this.updateButtons();
      }

      updateButtons() {
        if (this.prevButton) {
          this.prevButton.disabled = this.currentIndex === 0;
        }

        if (this.nextButton) {
          this.nextButton.disabled = this.currentIndex === this.items.length - 1;
        }
      }
    }

    customElements.define('scrollable-gallery-{{ ai_gen_id }}', ScrollableGallery{{ ai_gen_id }});
  })();
</script>

